<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable
            name="clickHandler"
            type="com.at.arouter.third.ui.aty.work_order.WorkOrderActivity.ClickHandler" />

        <variable
            name="dataHandler"
            type="com.at.arouter.third.ui.aty.work_order.WorkOrderActivity.DataHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_e8e8e8"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:id="@+id/rl_add_work_order"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/add_blue"
                    android:drawablePadding="8dp"
                    android:text="@string/a916"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
                android:id="@+id/prv_work_order"
                style="@style/padding_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/include_empty"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/include"
                    layout="@layout/layout_empty" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</layout>